<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
	<% include ../partials/tabbed-menu %>
	
	
	<div id="mastercontainer">
		<div class="container-fluid">
			
			<main>
				
				<h2>Add Friend</h2>
				<hr/>
				<h3>Please Enter your friend's email to add him / her to your contact</h3>
				<br>
				
				<form id="formAddFriend"  class="form-horizontal">
					<div class="form-group">
						<label class="control-label col-md-2" for="email">Email ID</label>
						<div class="col-md-5">
							<input type="email" name="email" placeholder="Email ID" class="form-control" id="email">
						</div>
						<div class="col-md-5"></div>
					</div>
					
					<div class="form-group">
						<div class="col-sm-offset-2 col-md-5">
							<button type="submit" class="btn btn-primary">Add Friend</button>
						</div>
					</div>
  
					
						
				</form>
				
				<br>

				<% if (successMsg) { %>
                <div class="alert alert-success" role="alert">
                    <%= successMsg %>
                </div>
                <% } %>
				
                

				<% if (error) { %>
				<div id="server-error-message" class="alert alert-danger" role="alert">
					<%= error %>
				</div>
				<% } %>
				
				<div class="alert alert-danger calculator-alerts hidden" id="error-messageAF"></div>
				<div class="alert alert-success hidden" id="server-success-message"></div>
				
		

				<div class="col-sm-6 form-box">
					<div class="form-top">
						<div class="form-top-left">
							<h2>Friends List</h2>
						</div>
						<div class="form-top-right">
							<i class="fa fa-pencil"></i>
						</div>
					</div>
					
					<div class="form-bottom">
						<% if (error2) { %>
							<div class="alert alert-danger" role="alert">
								<%= error2 %>
							</div>
							<% } %>
						
					   <table class="table table-hover">
						   <thead>
							   <tr>
								   <th> Name </th>
								   <th> Email </th>
								   <th> Action </th>
							   </tr>
						   </thead>
						   <tbody>
								<% if(friends) for(var i=0; i < friends.length; i++ ){  %>
									<tr>
										<td class="name" ><%= friends[i].name %></td>
										<td class="email"><%= friends[i].email %>  </td>
										<td>
											<button class="Remove btn btn-primary">Remove</button>
										</td>
									</tr>
								<% } %>
						   </tbody>
					   </table>
					</div>
				</div>
				
			</main>
		</div>
	</div>
		
	


<% include ../partials/addFriendscripts %>
<% include ../partials/footer %>
</body>

</html>